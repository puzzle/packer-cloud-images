{
  "description": "Minimal LVM-based CentOS 7 image for different clouds.",
  "builders": [
    {
      "type": "qemu",
      "iso_url": "https://mirror.init7.net/centos/7/isos/x86_64/CentOS-7-x86_64-NetInstall-1810.iso",
      "iso_checksum": "19d94274ef856c4dfcacb2e7cfe4be73e442a71dd65cc3fb6e46db826040b56e",
      "iso_checksum_type": "sha256",
      "output_directory": "images/centos7",
      "shutdown_command": "shutdown -P now",
      "disk_size": 10240,
      "format": "qcow2",
      "headless": false,
      "accelerator": "kvm",
      "qemuargs": [["-m", "1024M"]],
      "http_directory": "provisioning",
      "http_port_min": 8000,
      "http_port_max": 9000,
      "ssh_host_port_min": 2200,
      "ssh_host_port_max": 2300,
      "ssh_username": "root",
      "ssh_password": "iamgroot",
      "ssh_port": 22,
      "ssh_timeout": "30m",
      "vm_name": "localhost.localdomain",
      "net_device": "virtio-net",
      "disk_interface": "virtio",
      "boot_wait": "5s",
      "boot_command": [
        "<tab> ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos7-lvm-ks.cfg<enter><wait>"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "scripts/provision.sh"
      ]
    }
  ]
}
